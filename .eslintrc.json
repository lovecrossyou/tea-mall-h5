{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "eqeqeq": "off",
    "curly": "warn",
    "quotes": ["warn", "double"],
    "semi": 2
  }
}